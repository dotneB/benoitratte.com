---
import type { CollectionEntry } from "astro:content";

interface Props {
  formation: CollectionEntry<"education">;
}

const { data } = Astro.props.formation;
const { Content } = await Astro.props.formation.render();
---

<div class="title">{data.title}</div>
<!-- <img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" /> -->
<div class="content">
  <Content />
</div>
<br /><br />

<style>
  .title {
    background: var(--gray-999);
    color: var(--gray-200);
    border-radius: 0.375rem;
    font-size: var(--text-2xl);
  }

  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content {
    h2 {
      font-size: var(--text-xl);
      margin: 1rem 0;
    }

    h3 {
      font-size: var(--text-sm);
      margin: 0.75rem 0;
    }
  }

  @media (min-width: 50em) {
    .title {
      border-radius: 0.9375rem;
    }
  }
</style>
